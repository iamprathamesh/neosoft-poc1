{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": [2, "single", { "avoidEscape": true }],
        "indent": ["error", 4],
        "semi": "off",
        "@typescript-eslint/semi": ["error"],
        "linebreak-style": 0,
        "new-cap": "off"
    }
}
